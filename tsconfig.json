{
  "compilerOptions": {
      "moduleResolution": "node",
      "module": "ESNext",
      "types": [
          "node",
          "@wdio/globals/types",
          "expect-webdriverio",
          "@wdio/cucumber-framework",
          "@wdio/devtools-service"
      ],
      "target": "es2022",
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "strict": true
  },
}